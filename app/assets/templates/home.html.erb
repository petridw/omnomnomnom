<header class="row">
  <h1 class="text-center col-md-6 col-md-offset-3">
    Find Recipes
  </h1>
</header>

<section class="row">
  <form>
    <div class="form-group col-md-6 col-md-offset-3">
      <label for="keywords" class="sr-only">
        Keywords
      </label>
      <input type="text" ng-model="keywords" name="keywords" autofocus class="form-control" placeholder="Recipe name or ingredient">
    </div>
    <div class="form-group col-md-6 col-md-offset-3 text-center">
      <button ng-click="vm.search(keywords)" class="btn btn-primary btn-lg">
        Search
      </button>
    </div>
  </form>
</section>
